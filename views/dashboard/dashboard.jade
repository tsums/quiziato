//- Dashboard Server Template For Client Dashboard Angular Application

doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width')
        title iClicker2000™
        block css
            link(rel='stylesheet', href='/css/style.css')
            link(href='/components/bootswatch-dist/css/bootstrap.css', rel='stylesheet')
            link(href='/components/ui-select/dist/select.min.css', rel='stylesheet')
        block js
            if ENV_DEVELOPMENT
                script(src='http://localhost:35729/livereload.js')

        base(href="/dashboard/")
    body
        div(ng-app='dashboard')
            div(ng-controller='dashboardController')
                .navbar.navbar-default(role="navigation")
                    .container
                        .navbar-header
                            a.navbar-brand(href="/dashboard") iClicker2000™

                        ul.nav.navbar-nav
                            li
                                a(href="classroom", ng-class="{bold : activeController == 'classroomController'}") Classroom
                            li
                                a(href="questions", ng-class="{bold : activeController == 'questionManagerController'}") Questions
                            li
                                a(href="sessions", ng-class="{bold : activeController == 'sessionManagerController'}") Sessions
                            li
                                a(href="courses", ng-class="{bold : activeController == 'courseManagerController'}") Courses

                        ul.nav.navbar-nav.navbar-right
                            li
                                p.navbar-text {{socket.connected ? 'Connected' : 'Disconnected' }}
                            li
                                p.navbar-text Logged in as #[b #{user.name.full} ]
                            li
                                a(href='/logout') Log Out
                .container
                    div(ng-view)


    script(src='/socket.io/socket.io.js')
    script(src='/components/moment/moment.js')
    script(src='/components/angular/angular.js')
    script(src='/components/angular-route/angular-route.js')
    script(src='/components/angular-bootstrap/ui-bootstrap.js')
    script(src='/components/angular-bootstrap/ui-bootstrap-tpls.js')
    script(src='/components/angular-socket-io/socket.js')
    script(src='/components/angular-qrcode/angular-qrcode.js')
    script(src='/components/qrcode-generator/js/qrcode.js')
    script(src='/components/ui-select/dist/select.min.js')
    script(src='/js/app.min.js')
