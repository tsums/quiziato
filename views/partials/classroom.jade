.row
    .col-md-9
        .well
            div(ng-repeat='session in API.sessions')
                .row
                    p.col-md-4 {{session._id}}
                    button.btn.btn-sm.btn-success.col-md-3 Rejoin Session
                    button.btn.btn-sm.btn-warning.col-md-3.col-md-push-1 End Session

        form(name='start_session_form')
            h6.text-center To begin, select a course and click 'Start Room'
            .form-group
                label(for='username') Course
                select.form-control(required='', ng-model='course', ng-options='course.title for course in API.courses')
            .form-group
                button.btn.btn-lg.btn-primary.btn-block(type='submit', ng-click='manager.startSession(course._id)', ng-disabled='start_session_form.$invalid') Start Room
    .col-md-3
        p.text-center Students Connected
        ul.list-group
            li.list-group-item(ng-repeat="student in manager.students") {{student}}
