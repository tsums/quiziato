extends ../layout

block content
    h1 Quiz App
    p Welcome to Quiz App, please Log In:
    .login-box
        if message.length !== 0
            .alert.alert-danger= message
        form(role='form', action="/login", method="post")
            input.login-entry.form-control(type='text', name='username', placeholder='UCID', required='', autofocus='').
            input.login-entry.form-control(type='password', name='password',placeholder='Password', required='')
            label.checkbox.text-center
                input(type='checkbox', value='remember-me')
                | Remember Me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
