//- Login Page

extends ../layout

block content
    .center-block.auth-box
        h1 Quiz App
        p Welcome to Quiz App, please Log In:
        if message.length !== 0
            .alert.alert-danger= message
        form(role='form', action="/login", method="post")
            .form-group
                label(for='username') UCID
                input.form-control(type='text', name='username', placeholder='UCID', required='true', autofocus='')
            .form-group
                label(for='password') Password
                input.form-control(type='password', name='password',placeholder='Password', required='true')
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Log In
        br
        p Need an account? #[a(href='/register') Sign up here.]
